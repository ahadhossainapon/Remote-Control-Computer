<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/power_option_background"
    tools:context=".GomPlayer" >

    <Button
        android:id="@+id/gom_btn_playPause"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/push" />

    <Button
        android:id="@+id/gom_btnVoloumDown"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gom_btn_playPause"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/minus" />

    <Button
        android:id="@+id/gom_btnVoloumUp"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gom_btn_playPause"
        android:layout_alignLeft="@+id/gom_btnVoloumDown"
        android:layout_marginBottom="36dp"
        android:background="@drawable/plus" />

    <Button
        android:id="@+id/gom_btnFastBackWard"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/gom_btn_playPause"
        android:layout_alignBottom="@+id/gom_btn_playPause"
        android:layout_marginRight="18dp"
        android:layout_toLeftOf="@+id/gom_btn_playPause"
        android:background="@drawable/fast_backward" />

    <Button
        android:id="@+id/gom_btnFastForward"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/gom_btn_playPause"
        android:layout_alignBottom="@+id/gom_btn_playPause"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/gom_btn_playPause"
        android:background="@drawable/fast_forward" />

    <Button
        android:id="@+id/gom_btnNext"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/gom_btnFastForward"
        android:layout_alignBottom="@+id/gom_btnFastForward"
        android:layout_marginLeft="17dp"
        android:layout_toRightOf="@+id/gom_btnFastForward"
        android:background="@drawable/next" />

    <Button
        android:id="@+id/gom_btnPrevious"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/gom_btnFastBackWard"
        android:layout_alignBottom="@+id/gom_btnFastBackWard"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/gom_btnFastBackWard"
        android:background="@drawable/previous" />

</RelativeLayout>