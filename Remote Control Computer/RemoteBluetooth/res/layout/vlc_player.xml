<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/power_option_background"
    tools:context=".VlcPlayer" >

    <Button
        android:id="@+id/vlc_btn_playPause"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/push" />

    <Button
        android:id="@+id/vlc_btnFastBackWard"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/vlc_btnPrevious"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/vlc_btn_playPause"
        android:background="@drawable/fast_backward" />

    <Button
        android:id="@+id/vlc_btnFastForward"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/vlc_btnNext"
        android:layout_alignBottom="@+id/vlc_btnNext"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/vlc_btn_playPause"
        android:background="@drawable/fast_forward" />

    <Button
        android:id="@+id/vlc_btnVoloumDown"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vlc_btn_playPause"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:background="@drawable/minus" />

    <Button
        android:id="@+id/vlc_btnVoloumUp"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/vlc_btn_playPause"
        android:layout_alignLeft="@+id/vlc_btnVoloumDown"
        android:layout_marginBottom="23dp"
        android:background="@drawable/plus" />

    <Button
        android:id="@+id/vlc_btnPrevious"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/vlc_btnFastForward"
        android:layout_alignBottom="@+id/vlc_btnFastForward"
        android:layout_marginRight="18dp"
        android:layout_toLeftOf="@+id/vlc_btnFastBackWard"
        android:background="@drawable/previous" />

    <Button
        android:id="@+id/vlc_btnNext"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/vlc_btnFastForward"
        android:background="@drawable/next" />

</RelativeLayout>